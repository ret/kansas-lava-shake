create_project $projName "$projDir/$projName" -part $device
set_property design_mode RTL [get_filesets sources_1]
set vhdlSources [list {{#srcs}}"{{fileName}}" {{/srcs}}]
import_files -fileset [get_filesets sources_1] -force -norecurse $vhdlSources
